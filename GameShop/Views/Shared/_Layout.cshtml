<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
    <link href="style.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Game_Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" asp-controller="Home" asp-action="Index" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Магазин
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown" cursor="pointer">
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="PopularGames">Популярное</a></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="RecommendationGames">Рекомендации</a></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="WishList">Список желаемого</a></li>
                        </ul>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Library" asp-action="Index">Библиотека</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Profile" asp-action="Index">Профиль</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="RecommendedGameProducts" asp-action="Index">Рекомендации</a>
                    </li>
                </ul>
                @if(!User.Identity.IsAuthenticated)
                {
                   <div class="button login" style="position: absolute; right: 150px;">
                        <a class="btn btn-secondary" type="button" asp-controller="Account" asp-action="Login">Войти</a>
                        <a class="btn btn-secondary" type="button" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
                    </div> 
                }
                @if(User.Identity.IsAuthenticated)
                {
                    <div class="button login" style="position: absolute; right: 150px;">
                        <a class="btn btn-secondary" type="button" asp-controller="Account" asp-action="Logout">Выход</a>
                   </div>
                }
                <div class="d-flex">
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-success">Корзина</a>
                </div>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
        @if (IsSectionDefined("scripts"))
        {
            RenderSection("scripts");
        }
    </div>
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>