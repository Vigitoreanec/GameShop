﻿@using GameShop.Extensions
@using GameShopModel.Entities
@using GameShop.ViewModel
@model List<WishList>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-lg-7" style="width: 80%;">
                                <h5 class="mb-3">
                                    <a href="#!" class="text-body">
                                        Список Желаемого
                                    </a>
                                </h5>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div>
                                        <p class="mb-1">Список Игр</p>
                                    </div>
                                </div>

                                @foreach (var wishList in Model)
                                {
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <div class="d-flex flex-row align-items-center">
                                                    <div>
                                                        <img src="@wishList.GameProduct.PresentationImageUrl"
                                                             class="img-fluid rounded-3" alt="@wishList.GameProduct.Title" style="max-width: 265px;">
                                                    </div>
                                                    <div class="ms-3">
                                                        <h5>@wishList.GameProduct.Title</h5>
                                                        <p class="small mb-0">@wishList.GameProduct.Description.Truncate(260)...</p>
                                                    </div>
                                                </div>
                                                <div class="d-flex flex-row align-items-center">
                                                    <div style="width: 90px; ">
                                                        <h5 class="mb-0">@wishList.GameProduct.Price р</h5>
                                                    </div>
                                                    <a asp-controller="Home" asp-action="DeleteWishList" asp-route-id="@wishList.GameProduct.Id" type="button" class="btn btn-danger">Удалить</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>