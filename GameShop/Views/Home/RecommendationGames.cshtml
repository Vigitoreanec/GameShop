@using GameShop.Controllers
@using GameShopModel.Entities
@using GameShop.Extensions

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Dictionary<NameSurname, List<GameProduct>>

<section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-lg-7" style="width: 80%;">
                                <h5 class="mb-3">
                                    <a href="#!" class="text-body">
                                        Рекомендуемые игры
                                    </a>
                                </h5>
                                <hr>
                                

                                @foreach (var listGameProductsByExpert in Model)
                                {
                                    <div>
                                        <h5 class="mb-3">
                                            Эксперт:
                                        </h5>
                                        <h3>@listGameProductsByExpert.Key.name @listGameProductsByExpert.Key.surname</h3>
                                        
                                    </div>
                                    @foreach (var gameProduct in listGameProductsByExpert.Value)
                                    {
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <div class="d-flex flex-row align-items-center">
                                                    <div>
                                                            <img src="@gameProduct.PresentationImageUrl"
                                                                 class="img-fluid rounded-3" alt="@gameProduct.Title" style="max-width: 265px;">
                                                    </div>
                                                    <div class="ms-3">
                                                            <h5>@gameProduct.Title</h5>
                                                            <p class="small mb-0">@gameProduct.Description.Truncate(260)...</p>
                                                    </div>
                                                </div>
                                                <div class="d-flex flex-row align-items-center">
                                                    <div style="width: 90px; ">
                                                            <h5 class="mb-0">@gameProduct.Price р</h5>
                                                    </div>
                                                        <a asp-controller="Game" asp-action="Details" asp-route-id="@gameProduct.Id" type="button" class="btn btn-danger">Купить</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
﻿