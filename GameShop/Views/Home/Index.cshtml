                            {
                    <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@service.Movie.Id" style="
                    position: relative;
                    margin: 10px auto;
                    text-align: center;">
                        Удалить
                    </a>
                            } *@
                    @* <a asp-page="./Edit" asp-route-id="@service.Movie.Id" class="btn btn-primary" style="
                    position: relative;
                    margin: 10px auto;
                    text-align: center;">
                        Редактировать Услугу
                    </a> *@
                    
                </div>
            </div>
        </a>
        </div>
    }
</div>
</div>